<section class="container">
  <h3 class="fw-semibold">Your list of foods</h3>
  <div class="d-flex justify-content-end p-4">
     <%= link_to "Add Food", new_user_food_path(current_user), class: "btn btn-sm btn-primary" %>
  </div>

  <table class="table table-sm table-bordered">
    <thead class="bg-light">
      <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Qty</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
      <% @all_foods.each do |food| %>
        <tr>
          <td> <%= food.name %></td>
          <td> <%= food.measurement_unit %></td>
          <td> $<%= food.price %> </td>
          <td> <%= food.quantity %> </td>
          <td><%= button_to "Delete", user_food_path(@user, food), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>